<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animation Duration:"
                android:id="@+id/dcVolt" android:layout_gravity="left|center_vertical"/>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">
            <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar" android:max="10000"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast"
                    android:id="@+id/textView" android:layout_alignParentLeft="true"
                    android:layout_alignBottom="@+id/seekBar"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow"
                    android:id="@+id/acVolt"
                    android:layout_alignRight="@+id/seekBar" android:layout_alignBottom="@+id/seekBar"/>

            <Button
                android:id="@+id/btnForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/seekBar"
                android:text="Form Configuration" />

            <Button
                android:id="@+id/btnViewLogs"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btnForm"
                android:layout_marginTop="49dp"
                android:text="View Logs" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>